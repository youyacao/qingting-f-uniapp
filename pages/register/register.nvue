<template>
	<view class="content">
		<view class="login-box">
			<view class="form-item-box">
				<input v-model="formData.phone" class="input-box" type="number" placeholder="请输入手机号" />
			</view>
			<view class="form-item-box line-box">
				<input v-model="formData.code" class="input-box" type="number" placeholder="请输入验证码" />
				<text class="yzcode-wating" v-if="daojishi>0">{{daojishi}}秒后可重试</text>
				<text class="yzcode-box" @click="onSendSms" v-else>发送验证码</text>
			</view>
			<view class="form-item-box">
				<input v-model="formData.password" class="input-box" :password="true" placeholder="请输入登陆密码" />
			</view>
			<view class="form-item-box">
				<input v-model="formData.repassword" class="input-box" :password="true" placeholder="请再次输入密码" />
			</view>
			<view class="form-item-box">
				<view class="submit-button" hover-class="button-hover" @click="onSubmit()">
					<text class="submit-button-text">立即注册</text>
				</view>
			</view>
			<view class="form-item-box">
				<view class="reglink-box">
					<text class="reglink-text">已有账号？</text>
					<text class="reglink-link" @click="goBack">返回登陆</text>
				</view>
			</view>
		</view>
	</view>
</template>

<script>
	import {register,sendSms} from "@/js_sdk/user.js"
	export default {
		data() {
			return {
				formData:{
					phone:null,
					code:"",
					password:"",
					repassword:""
				},
				daojishi:0,
				isSendingCode:false
			}
		},
		onShow() {
			
		},
		methods: {
			goBack(){
				uni.navigateBack({
					delta:1
				})
			},
			onSubmit(){
				uni.hideKeyboard()
				if(!this.formData.phone){
					uni.showToast({
						icon:"none",
						title:"请输入手机号"
					})
					return
				}
				if(!this.formData.password){
					uni.showToast({
						icon:"none",
						title:"请输入登陆密码"
					})
					return
				}
				if(this.formData.password != this.formData.repassword){
					uni.showToast({
						icon:"none",
						title:"两次输入密码不一致，请重新输入"
					})
					this.formData.password = null
					this.formData.repassword = null
					return
				}
				register(this.formData).then(res=>{
					uni.showModal({
						title:"提示",
						content:"恭喜注册成功",
						showCancel:false,
						success:() => {
							this.goBack()
						}
					})
				}).catch(error=>{
					console.log(error)
				})
			},
			onSendSms(){
				if(this.isSendingCode){
					return
				}
				if(!this.formData.phone){
					uni.showToast({
						icon:"none",
						title:"请输入手机号"
					})
					return
				}
				this.isSendingCode = true
				uni.hideKeyboard()
				uni.showLoading({
					title:"正在发送"
				})
				sendSms({
					phone:this.formData.phone,
					no_captcha:0
				}).then(res=>{
					uni.showToast({
						title:res.msg
					})
					this.daojishi = 60
					var timer = setInterval(()=>{
						this.daojishi--
						if(this.daojishi<=0){
							this.isSendingCode = false
							this.daojishi = 0
							clearInterval(timer)
						}
					},1000)
				}).catch(error=>{
					this.isSendingCode = false
					console.log(error)
				})
			}
		}
	}
</script>

